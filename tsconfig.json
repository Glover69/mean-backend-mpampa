{
    "compilerOptions": {
        "module": "NodeNext",
        "esModuleInterop": true,
        "target": "ESNext",
        "noImplicitAny": true,
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "allowJs": true,
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}

